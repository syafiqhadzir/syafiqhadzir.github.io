{
    "name": "syafiqhadzir.github.io",
    "version": "2.0.0",
    "description": "Google AMP Portfolio with Eleventy - Software QA Engineer",
    "keywords": [
        "eleventy",
        "amp",
        "portfolio",
        "typescript",
        "docker"
    ],
    "homepage": "https://syafiqhadzir.dev",
    "bugs": {
        "url": "https://github.com/syafiqhadzir/syafiqhadzir.github.io/issues",
        "email": "syafiqhadzir@live.com.my"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/syafiqhadzir/syafiqhadzir.github.io.git"
    },
    "license": "CC0-1.0",
    "author": {
        "name": "Syafiq Hadzir",
        "email": "syafiqhadzir@live.com.my",
        "url": "https://syafiqhadzir.dev"
    },
    "type": "module",
    "scripts": {
        "prebuild": "npm run compile:ts",
        "build": "eleventy",
        "build:prod": "cross-env NODE_ENV=production eleventy && npm run build:size-report",
        "build:size-report": "npx ts-node scripts/build-size-report.ts _site",
        "clean": "rimraf _site coverage cypress/reports dist",
        "compile:ts": "tsc src/filters/dateFormat.ts src/filters/readingTime.ts src/shortcodes/ampImg.ts src/transforms/cssGuard.ts src/transforms/htmlMinify.ts src/transforms/extremeMinify.ts src/lib/lightningCss.ts src/lib/svgoOptimize.ts --outDir dist --module ESNext --moduleResolution Bundler --declaration false --target ES2022 --esModuleInterop true",
        "predev": "npm run compile:ts",
        "dev": "eleventy --serve",
        "housekeeping": "npx ts-node scripts/housekeeping.ts",
        "housekeeping:knip": "npx knip",
        "housekeeping:knip:fix": "npx knip --fix",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:css": "stylelint src/**/*.scss --fix",
        "lint:js": "eslint src/**/*.ts test/**/*.ts --fix",
        "perf": "npm run perf:local",
        "perf:ci": "lhci autorun",
        "perf:local": "lhci autorun",
        "prepare": "husky",
        "serve": "npx serve _site -l 8080",
        "serve:static": "npx serve . -l 8080",
        "sonar": "sonar-scanner",
        "test": "npm run test:unit && npm run test:e2e",
        "test:a11y": "cypress run --spec 'cypress/e2e/a11y.cy.ts'",
        "test:clean": "rimraf cypress/reports cypress/screenshots coverage",
        "test:e2e": "cypress run",
        "test:e2e:ci": "cypress run --browser chrome",
        "test:e2e:open": "cypress open",
        "test:report": "npx mochawesome-merge cypress/reports/*.json -o cypress/reports/combined.json && npx marge cypress/reports/combined.json -o cypress/reports -f report",
        "test:smoke": "cypress run --spec 'cypress/e2e/smoke.cy.ts'",
        "test:unit": "vitest run",
        "test:unit:coverage": "vitest run --coverage",
        "test:unit:watch": "vitest",
        "typecheck": "tsc --noEmit",
        "validate:amp": "npx ts-node scripts/validate-amp.ts",
        "validate:amp:build": "amphtml-validator _site/*.html",
        "validate:schema": "npx ts-node scripts/validate-schema.ts _site"
    },
    "overrides": {
        "node-forge": "^1.3.3"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@eslint/js": "^9.39.2",
        "@lhci/cli": "^0.15.1",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/html-minifier-terser": "^7.0.2",
        "@types/node": "^25.0.3",
        "@vitest/coverage-v8": "^4.0.16",
        "amphtml-validator": "^1.0.38",
        "autoprefixer": "^10.4.23",
        "axe-core": "^4.11.0",
        "cross-env": "^10.1.0",
        "csso": "^5.0.5",
        "cypress": "^15.8.1",
        "cypress-axe": "^1.7.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsdoc": "^61.5.0",
        "eslint-plugin-sonarjs": "^3.0.5",
        "eslint-plugin-unicorn": "^62.0.0",
        "globals": "^16.5.0",
        "html-minifier-terser": "^7.2.0",
        "husky": "^9.1.7",
        "knip": "^5.76.1",
        "lightningcss": "^1.30.2",
        "lint-staged": "^16.2.7",
        "mochawesome": "^7.1.4",
        "mochawesome-merge": "^5.1.0",
        "mochawesome-report-generator": "^6.3.2",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2",
        "sass": "^1.97.1",
        "semantic-release": "^25.0.2",
        "sonarqube-scanner": "^4.3.2",
        "sort-package-json": "^3.6.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-order": "^7.0.0",
        "svgo": "^4.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.0",
        "vitest": "^4.0.16",
        "vitest-sonar-reporter": "^3.0.0"
    },
    "engines": {
        "node": "24.x",
        "npm": ">=10.0.0"
    }
}
