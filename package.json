{
  "name": "syafiqhadzir.github.io",
  "version": "2.0.0",
  "description": "Google AMP Portfolio with Eleventy - Software QA Engineer",
  "homepage": "https://syafiqhadzir.dev",
  "type": "module",
  "bugs": {
    "email": "syafiqhadzir@live.com.my",
    "url": "https://github.com/syafiqhadzir/syafiqhadzir.github.io/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syafiqhadzir/syafiqhadzir.github.io.git"
  },
  "license": "CC0-1.0",
  "author": {
    "name": "Syafiq Hadzir",
    "email": "syafiqhadzir@live.com.my",
    "url": "https://syafiqhadzir.dev"
  },
  "scripts": {
    "compile:ts": "tsc src/filters/dateFormat.ts src/filters/readingTime.ts src/shortcodes/ampImg.ts src/transforms/cssGuard.ts src/transforms/htmlMinify.ts --outDir dist --module ESNext --moduleResolution Bundler --declaration false --target ES2022 --esModuleInterop true",
    "prebuild": "npm run compile:ts",
    "predev": "npm run compile:ts",
    "dev": "eleventy --serve",
    "build": "eleventy",
    "serve": "npx serve _site -l 8080",
    "serve:static": "npx serve . -l 8080",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.ts test/**/*.ts --fix",
    "lint:css": "stylelint src/**/*.scss --fix",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:ci": "cypress run --browser chrome",
    "test:a11y": "cypress run --spec 'cypress/e2e/a11y.cy.ts'",
    "test:smoke": "cypress run --spec 'cypress/e2e/smoke.cy.ts'",
    "test:report": "npx mochawesome-merge cypress/reports/*.json -o cypress/reports/combined.json && npx marge cypress/reports/combined.json -o cypress/reports -f report",
    "test:clean": "rimraf cypress/reports cypress/screenshots coverage",
    "validate:amp": "npx ts-node scripts/validate-amp.ts",
    "validate:amp:build": "amphtml-validator _site/*.html",
    "validate:schema": "npx ts-node scripts/validate-schema.ts _site",
    "clean": "rimraf _site coverage cypress/reports dist",
    "sonar": "sonar-scanner"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@eslint/js": "^9.17.0",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.16",
    "amphtml-validator": "^1.0.38",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.11.0",
    "csso": "^5.0.5",
    "cypress": "^15.8.1",
    "cypress-axe": "^1.7.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "html-minifier-terser": "^7.2.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2",
    "postcss": "^8.4.49",
    "rimraf": "^6.1.2",
    "sass": "^1.83.0",
    "sonarqube-scanner": "^4.2.4",
    "stylelint": "^16.12.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}