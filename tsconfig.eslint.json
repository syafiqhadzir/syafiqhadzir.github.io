{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "test/**/*.ts",
        "scripts/**/*",
        "scripts/build-production.ts",
        "cypress/**/*.ts",
        "cypress.config.ts",
        "vitest.config.ts",
        "knip.config.ts",
        "eleventy.config.js",
        "eslint.config.js",
        "types/**/*.d.ts",
        "stylelint.config.js",
        "*.config.js",
        ".dependency-cruiser.cjs",
        "workbox-config.cjs"
    ],
    "exclude": ["node_modules", "_site", "dist", "coverage"]
}
