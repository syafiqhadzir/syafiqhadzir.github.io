# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts}]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# XML files
[*.xml]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
