{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "always",
    "endOfLine": "lf",
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2,
                "proseWrap": "always"
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
